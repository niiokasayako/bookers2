<div class="container">
  <div class="row">

        <%= render 'new', book: @book, user: @user %>

            <div class="col-md-8 offset-md-1">
                <h2>Books</h2>
                    <table class="table table-hover table-inverse">
                        <thead>
                            <tr>
                               <th></th>
                               <th>Title</th>
                               <th>Opinion</th>
                               <th colspan="3"></th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @books.each do |book| %>
                                <tr>
                                  <td>
                                   <div class="col-2">
                                     <%= link_to user_path(book.user) do %>
                                       <%= image_tag book.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
                                     <% end %>
                                   </div>
                                   </td>
                                   <td>
                                      <%= link_to book_path(book) do %>
                                        <%= book.title %>
                                      <% end %>
                                   </td>
                                   <td><%= book.body %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
            </div>

    </div>
</div>