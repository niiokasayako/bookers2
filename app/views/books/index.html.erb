<%= render 'list', book: @book %>

<div class="col-md-8 offset-md-1">
  
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <h2>Books</h2>
    <table class="table table-hover table-inverse">
        <thead>
                <tr>
                       <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                </tr>
        </thead>
        <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td>
                   <div class="col-2">
                     <%= image_tag @book.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
                   </div>
                  </td>
                    <td>
                      <%= link_to show_user_path(@user) do %>
                        <%= book.title %>
                      <% end %>
                    </td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
        </tbody>
    </table>
</div>