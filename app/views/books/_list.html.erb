<div class="container">
  <div class="row">
     <div class="col-md-3">

      <h2>User info</h2>
        <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
          <table class="table">
            <tbody>
              <tr></tr>
                <tr><th>name</th><th><%= user.name %></th></tr>
                <tr><th>introduction</th><th><%=user.introduction %></th></tr>
            </tbody>
          </table>
          <div class="row">
            <% if user == current_user %>
               <div class="social">
                 <a class="fa-solid fa-user-gear" href="edit_user_path(@user)", class: "btn btn-outline-secondary btn-block" ></a>
               </div>
            <% end %>

        <% if book.errors.any? %>
          <%= book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
        <%= form_with model: book do |f| %>
          <div class = "field">
            <p>Title</p>
              <%= f.text_field :title %>
          </div>

          <div class = "field">
            <p>Body</p>
              <%= f.text_area :body %>
          </div>

          <div class ="actions">
            <p><%= f.submit 'Create Book' %></p>
          </div>
     </div>
  </div>
 </div>

<% end %>