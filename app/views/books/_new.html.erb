<div class="container">
      <% if book.errors.any? %>
    <%= book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
</div>

<div class="col-md-3">
  <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>

  <table class="table">
    <tbody>
      <tr></tr>
      <tr><th>name</th><th><%= user.name %></th></tr>
      <tr><th>introduction</th><th><%=user.introduction %></th></tr>
    </tbody>
  </table>

  <% if user == current_user %>
    <div class="social">
      <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  <% end %>

   <h2>New book</h2>

    <%= form_with model: book, local:true do |f| %>
      <div class = "field">
        <p>Title</p>
          <%= f.text_field :title, class: "col-12" %>
      </div>

      <div class = "field">
        <p>Opinion</p>
          <%= f.text_area :body, class: "col-12" %>
      </div>

      <div class ="actions">
        <p><%= f.submit 'Create Book', class:"btn btn-success" %></p>
      </div>
    <% end %>

</div>